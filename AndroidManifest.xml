<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.yuvi.wpsignpost"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="SignpostApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PostsActivity"
            android:label="@string/title_activity_main"
            android:logo="@drawable/ic_logo" android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostActivity"
            android:label="@string/title_activity_post"
            android:logo="@drawable/ic_logo" android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.yuvi.wpsignpost.PostsActivity" />
        </activity>
        <activity
            android:name=".IssueListActivity"
            android:label="@string/title_activity_issue_list"
            android:logo="@drawable/ic_logo" android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.yuvi.wpsignpost.PostsActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.yuvi.wpsignpost.PostsActivity" />
        </activity>
    </application>

</manifest>